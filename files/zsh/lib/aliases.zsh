# Push and pop directories on directory stack
alias pu='pushd'
alias po='popd'

# Basic directory operations
alias ...='cd ../..'
alias -- -='cd -'

# List direcory contents
alias l='ls -lh --color=auto'
alias la='ls -Alh --color=auto'
alias rm='rm -i'
alias rr='rm -rf'
alias md='mkdir -p'
alias c='clear'

alias sudo='sudo '

alias halt='sudo shutdown -h -P now'
