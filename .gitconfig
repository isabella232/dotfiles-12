[user]
  name = NAME
  email = MAIL

[color]
  ui = auto

[color "diff"]
  meta = blue bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "branch"]
  current = yellow reverse
  local = yellow bold
  remote = green bold
  plain = red bold

[color "status"]
  added = yellow
  changed = green bold
  untracked = blue bold

[alias]
  st = status
  ci = commit
  co = checkout
  br = branch
  df = diff

[core] 
  whitespace = trailing-space,cr-at-eol ; warn about unwanted characters
